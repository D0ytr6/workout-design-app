<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/workout_type_logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_run"
        android:background="@drawable/workout_type_item"
        />

    <View
        android:layout_width="2dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="29dp"
        app:layout_constraintTop_toTopOf="@id/description_ll"
        app:layout_constraintBottom_toBottomOf="@id/description_ll"
        android:background="#0AFFFFFF"
        />

    <ImageView
        android:id="@+id/clock_iv"
        android:padding="8dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/workout_type_logo"
        android:src="@drawable/ic_time"
        android:background="@drawable/clocl_circle"
        app:layout_constraintLeft_toRightOf="@id/workout_type_logo"/>

    <TextView
        android:id="@+id/start_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/sourcesans3regular"
        android:textSize="14sp"
        android:text="06:20"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/clock_iv"
        app:layout_constraintBottom_toBottomOf="@id/clock_iv"
        app:layout_constraintLeft_toRightOf="@id/clock_iv"
        />

    <TextView
        android:id="@+id/end_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/sourcesans3regular"
        android:textSize="14sp"
        android:text="07:30"
        app:layout_constraintTop_toTopOf="@id/clock_iv"
        app:layout_constraintBottom_toBottomOf="@id/clock_iv"
        app:layout_constraintLeft_toRightOf="@id/start_workout"/>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/description_ll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/workout_type_logo"
        app:layout_constraintLeft_toLeftOf="@id/clock_iv"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/today_workout_background"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/workout_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sourcesans3regular"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="Morning jorking"
            />

        <TextView
            android:id="@+id/workout_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/sourcesans3regular"
            android:textSize="14sp"
            android:text="From the Central Park to the top of Nanshain mountain"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>




</androidx.constraintlayout.widget.ConstraintLayout>