<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Choose a color"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/empty_box"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/color_checkbox_empty" />


    </RelativeLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/blue_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/color_checkbox_blue" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/red_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/color_checkbox_red" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/purple_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/color_checkbox_purple" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/green_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/color_checkbox_green" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/white" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/yellow_fl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="5dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/color_checkbox_yellow" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/white" />

            </FrameLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </HorizontalScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>